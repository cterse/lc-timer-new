{
    "name": "New Leetcode Timer",
    "version": "1.0",
    "description": "Timer for Leetcode questions.",
    
    "icons": {
        "64": "assets/images/icon100.png"
    },

    "permissions": ["storage"],

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["https://*.leetcode.com/problems/*"],
            "js": ["lib/jquery-3.4.1.min.js", "content.js"]
        }
    ],

    "manifest_version": 2
    
}